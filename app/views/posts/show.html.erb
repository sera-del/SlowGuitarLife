<div class="bg-image", style="background-image: url('<%= asset_path('title-img.jpeg') %>')">
  <div class="title-container">
    <h2><%= @post.title %></h2>
  </div>
</div>
<div class="bg-image", style="padding: 50px 10px">
  <div class="main-container">
    <table class="table align-middle mb-3 bg-white">
      <tbody>
        <tr>
          <th>アイコン画像</th>
          <td>
            <% if @post.user.user_img.attached? %>
              <%= image_tag @post.user.user_img, class: "rounded-circle", size: "40x40" %>
            <% else %>
              <%= image_tag "default_img.png", class: "rounded-circle", size: "40x40", alt: "Defualt image" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= @post.user.username %></td>
        </tr>
        <tr>
          <th>コメント</th>
          <td><%= @post.content %></td>
        </tr>
        <tr>
          <th>おすすめのジャンル</th>
          <td><%= @post.category %></td>
        </tr>
      </tbody>
    </table>
    <% if @post.user_id == current_user.id %>
        <%= link_to "編集する", edit_post_path, class: "btn btn-info" %>
        <%= link_to "削除する", post_path, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
    <% end %>
    <%= link_to "戻る", :back, class: "btn btn-success" %>
  </div>
</div>
