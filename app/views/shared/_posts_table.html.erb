<table class="table align-middle mb-0 bg-white">
  <% @posts.each do |post| %>
    <tbody>
      <tr>
        <td>
          <div class="d-flex align-items-center">
            <% if post.user.user_img.attached? %>
              <%= image_tag post.user.user_img, class: "rounded-circle", size: "40x40" %>
            <% else %>
              <%= image_tag "default_img.png", class: "rounded-circle", size: "40x40", alt: "Defualt image" %>
            <% end %>
            <div class="ms-3">
              <p class="fw-bold mb-1"><%= link_to post.user.username, user_path(post.user.id), class: "username_color" %></p>
            </div>
          </div>
        </td>
        <td>
          <p class="fw-normal mb-1"><%= post.title %></p>
        </td>
        <td>
          <p class="fw-normal mb-1">カテゴリー</p>
          <p class="text-muted mb-0"><%= post.category %></p>
        </td>
        <td>
          <p class="fw-normal mb-1">タグ</p>
          <p class="text-muted mb-0"><%= link_to post.tag, tag_search_posts_path(word: post.tag) %></p>
        </td>
        <td>
          <%= post.created_at.to_s(:date_jp) %>
        </td>
        <td>
          <p class="text-muted mb-0"><%= link_to "詳細", post_path(post.id), class: "btn btn-success" %></p>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
