<div class="title">
  <div class="title-container">
    <h2>ユーザー登録</h2>
  </div>
</div>
<div class="bg-image", style="background-image: url('<%= asset_path('firstview.jpg') %>'); height: 500px; padding: 40px 10px">
  <div class=main-container>
    <h2>|アカウントを作成</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :username, "ユーザー名" %><br />
        <%= f.email_field :username, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(最低<%= @minimum_password_length %>文字以内)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録する", class: "btn btn-info" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
